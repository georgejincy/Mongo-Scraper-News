<div>
	{{#each Article}}
		<div class = "callout clearfix">
			<h2 class = "article-title" id="{{add 'title' this.id}}">{{this.title}}<h2>
			<img width = '150' height = '150' class="float-left article-image" id ="{{add 'image' this.id}}" src="{{this.imgLink}}">
			<p class="article-body" id ="{{add 'body' this.id}}">{{this.body}}
			</p>
			<a href="{{this.articleLink}}" id ="{{add 'link' this.id}}" class = "article-link" target="_blank">Read More here</a>
			<p><button type="submit" data-id = {{this.id}} class="button float-right save-article">SAVE ARTICLE</button></p>
			
		</div>

	{{/each}}

</div>