<div>
	{{#each SavedArticle}}
		<div class = "callout clearfix">
			<h2 class = "article-title" id="{{add 'title' this.id}}">{{this.title}}<h2>
			<img width = '150' height = '150' class="float-left article-image" id ="{{add 'image' this.id}}" src="{{this.imageLink}}">
			<p class="article-body" id ="{{add 'body' this.id}}">{{this.body}}
			<a href="{{this.articleLink}}" id ="{{add 'link' this.id}}" class = "article-link" target="_blank">Read More here</a></p>
			
			<p><button type="button" data-id = {{this.id}} class="button float-right delete-article" id = "{{add 'delete' this.id}}">DELETE FROM SAVED</button></p>
			<p><a href="{{add '/savedNotes/' this.id}}" data-reveal-id="notesModal" data-id = {{this.id}} class="button float-right notes" id = "{{add 'add' this.id}}">ARTICLE NOTES</a></p>	
			
		</div>

	{{/each}}


</div>

